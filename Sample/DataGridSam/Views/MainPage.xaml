<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sam="clr-namespace:DataGridSam;assembly=DataGridSam"
             xmlns:vm="clr-namespace:Sample.ViewModels"
             mc:Ignorable="d"
             x:Class="Sample.Views.MainPage"
             Title="DataGridSam">
    
    <d:ContentPage.BindingContext>
        <vm:MainPageVm/>
    </d:ContentPage.BindingContext>
    
    <StackLayout>
        <!--Table-->
        <sam:DataGrid ItemsSource="{Binding Items}"
                      SelectedItem="{Binding SelectedItem}"
                      VerticalOptions="FillAndExpand"
                      HeaderTextColor="White"
                      HeaderFontSize="16"
                      HeaderBackgroundColor="#2196F3"
                      SelectedRowAttribute="Bold"
                      RowsColor="White"
                      RowsFontSize="16"
                      RowsTextColor="Black"
                      BorderColor="#2196F3"
                      CellPadding="5,10,5,10"
                      CommandSelectedItem="{Binding CommandSelectItem}">
            <sam:DataGrid.Columns>
                <!--Columns-->
                <sam:DataGridColumn Title="#" 
                                    Width="40"
                                    PropertyName="Pos"/>
                <sam:DataGridColumn Title="Name" 
                                    Width="2*"
                                    CellTextColor="Purple"
                                    PropertyName="Name"/>
                <sam:DataGridColumn Title="Need" 
                                    Width="1*"
                                    HorizontalTextAlignment="End"
                                    PropertyName="Need"/>
                <sam:DataGridColumn Title="Price" 
                                    Width="1*"
                                    HorizontalTextAlignment="End"
                                    PropertyName="Price"/>
                <sam:DataGridColumn Title="Weight" 
                                    Width="1*"
                                    PropertyName="Weight"
                                    HorizontalTextAlignment="End">
                </sam:DataGridColumn>
            </sam:DataGrid.Columns>
            
            <sam:DataGrid.RowTriggers>
                <!--If item is can completed-->
                <sam:RowTrigger PropertyTrigger="IsCanCompleted" Value="True"
                                RowBackgroundColor="#fbc02d"/>
                
                <!--If item is complete-->
                <sam:RowTrigger PropertyTrigger="IsCompleted" Value="True"
                                RowBackgroundColor="Accent"
                                RowTextColor="White"/>
            </sam:DataGrid.RowTriggers>
        </sam:DataGrid>

        <StackLayout BackgroundColor="Gray">
            <StackLayout Orientation="Horizontal">
                <Label Text="{Binding SelectedItem.Pos}"
                       TextColor="Black"/>
                <Label Text="{Binding SelectedItem.Name}"
                       TextColor="Black"/>
            </StackLayout>

            <Label Text="{Binding SelectedItem.IsCanCompleted, StringFormat='Is can completed: {0} (if Weight > Need)'}"
                   TextColor="Black"/>

            <StackLayout>
                <Label Text="{Binding SelectedItem.IsCompleted, StringFormat='Is completed: {0}'}"
                       TextColor="Black"/>
                <Switch IsToggled="{Binding SelectedItem.IsCompleted}"/>
            </StackLayout>
        
            <StackLayout Orientation="Horizontal">
                <Label Text="Weight"
                       TextColor="Black"/>
                <Entry Text="{Binding SelectedItem.Weight}"
                       HorizontalOptions="FillAndExpand"
                       Keyboard="Numeric"/>
            </StackLayout>


            <Button Text="Open selected item"
                    Command="{Binding CommandOpenWare}"/>
            <Button Text="Add"
                    Command="{Binding CommandAddItem}"/>
            <Button Text="Remove last"
                    Command="{Binding CommandRemoveItem}"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
