<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Boris Krit</Authors>
    <Company />
    <Description>Onvenient and faster element for display DataGrid in Xamarin.Forms</Description>
    <NeutralLanguage>en</NeutralLanguage>
    <PackageTags>dataGrid, xamarin.forms, forms, xamarin, grid, DataGridSam</PackageTags>
    <RepositoryUrl>https://github.com/scriptBoris/DataGridSam</RepositoryUrl>
    <PackageProjectUrl>https://github.com/scriptBoris/DataGridSam</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="4.1.0.778454" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="DataGrid.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="DataGrid.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
  </ItemGroup>

</Project>
